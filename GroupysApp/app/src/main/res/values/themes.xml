<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Main" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/sub_black</item>
        <item name="colorSecondary">@color/sub_danger</item>
    </style>

    <style name="Theme.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/white</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>
</resources>